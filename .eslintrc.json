{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended" // Isso ativa Prettier e desabilita regras conflitantes
  ],
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/imports": "error",
    "camelcase": "off",
    "no-unused-vars":"error",
    "no-unused-expressions":"error",
    "semi":"off"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}
